#目标：依赖文件
#tab+命令
# $^  代表所有依赖文件
# $@  代表所有目标文件
# $<  代表第一个依赖文件
# %   代表通配符
# @指令：屏蔽指令
#定义变量（变量大写）
#变量名=值1 值2 ...
#使用变量 $(变量名)
#
#

OBJS=main.o \
	 add.o \
	 sub.o

#main : m.o add.o sub.o
#	gcc -g m.o add.o sub.o -o main
#m.o:m.c
#	gcc -c -g $^ -o $@
#add.o : add.c
#	gcc -c -g $^ -o $@
#sub.o : sub.c
#	gcc -c -g $^ -o $@
#声明成伪目标，不再比较时间戳
.PHONY : clean 

main:$(OBJS)
	gcc -g $^ -o $@
%.o:%.c
	gcc -c -g $< -o $@

clean:
	
    m -rf *.o
